{
  "preset": "ts-jest",
  "testEnvironment": "node",
  "rootDir": "./",
  "testPathIgnorePatterns": ["/node_modules/", "/dist/"],
  "verbose": true,
  "coverageThreshold": {
    "global": {
      "branches": 80,
      "functions": 80,
      "lines": 80,
      "statements": 80
    }
  },
  "globals": {
    "ts-jest": {
      "tsConfig": "<rootDir>/tsconfig.test.json"
    }
  }
}
